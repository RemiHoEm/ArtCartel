
<div class="container">
    <div class="row">
        <div class="col-12">
            <div style="display: flex; justify-content: center; align-items: center; height: 100px;">
              <h1><%=@artwork.name%></h1>
            </div>
            <div style="display: flex; gap: 10px; flex; justify-content: center;n">
                <p><%=@artwork.materials%></p>
                <p><%=@artwork.dimensions%></p>
                <p><%=@artwork.museum%></p>
            </div>
            <%= render "layouts/form-game", game: @game%>
        </div>
    </div>

  <div class="popup rounded" data-controller="popup" data-popup-target= "root">
      <div data-popup-target="content" class="my-popup-content rounded">
        <div class="map_txt_popup_answer div">
          <div
            class= "map_popup_answer"
            style="width: 100%; height: 300px;"
            data-controller="map"
            data-map-markers-value="<%= @markers.to_json %>"
            data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
          <div class="div text_popup_answer h3">
            <p class="fw-bold"><%=@artwork.artist%></p>
            <p class="fw-bold"><%=@artwork.creation_date%></p>
          </div>
        </div>

        <div class="div footer_popup_answer d-flex justify-content-between">
          <a class="btn btn-primary" target="_blank" href="<%=@artwork.info_link%>">more info</a>
          <%= link_to "Next",
          #path vers next artwork,
          class:"my-popup-close-btn btn-custom text-decoration-none " %>
        </div>

      </div>
  </div>
</div>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<%= render "layouts/form-game", game: @game%>
