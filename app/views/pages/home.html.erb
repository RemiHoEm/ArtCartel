<div class="home-page">
  <!-- Hero Section -->
  <div class="hero">
    <h1 class="game-title">ArtCartel</h1>
    <p class="subtitle">Discover. Play. Master.</p>

    <!-- Difficulty Switch -->
    <div class="difficulty-switch" data-controller="difficulty">
      <button class="difficulty-btn active" data-difficulty-target="normal">Normal</button>
      <button class="difficulty-btn" data-difficulty-target="easy">Easy</button>
    </div>
  </div>

  <!-- Play Button -->
  <div class="play-section">
    <button class="play-btn">PLAY</button>
  </div>

  <!-- Options Section -->
  <div class="options-section">
    <div class="option-card">
      <div class="icon categories-icon"></div>
      <p>Categories</p>
    </div>
    <div class="option-card">
      <div class="icon techniques-icon"></div>
      <p>Techniques</p>
    </div>
    <div class="option-card">
      <div class="icon museums-icon"></div>
      <p>Museums</p>
    </div>
  </div>
</div>
